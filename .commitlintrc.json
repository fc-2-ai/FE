{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "docs",
        "conf",
        "feat",
        "asset",
        "design",
        "rename",
        "remove",
        "chore",
        "refactor",
        "fix",
        "hotfix",
        "!breakingChange",
        "test"
      ]
    ]
  }
}
